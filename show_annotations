# In[32]:


from matplotlib.lines import Line2D
def show_polygons(img,poly_json):
    f,ax=pl.subplots()
    pl.imshow(PIL.Image.open(img))

    for p_j in poly_json[0]['tags']:
        points=(p_j['points'])
        x,y=zip(*points)
        ax.add_line(Line2D(x,y))


# In[33]:


show_polygons(img,poly_json)


